<% if !@game.pending? %>
  <div class="text-center">
    <h3>
      <span class="label label-default">PLAYER <%= @game.status.upcase %></span>
    </h3>
    <br/>
    <%= link_to 'Deal Again', new_game_path, class: 'btn btn-primary' %>
    <%= link_to 'Statistics', stats_user_path(current_user), class: 'btn btn-success' %>
  </div>
<%end%>