<% if @game.pending? %>
  <div class="col-xs-offset-1 col-xs-10 col-sm-5 col-sm-offset-1 text-center">
    <h1> DEALER </h1>
    <%= render partial: 'dealer', locals: {game: @game}%>
  </div>
  <div class="col-xs-offset-1 col-xs-10 col-sm-5 col-sm-offset-0 text-center">
    <h1> PLAYER </h1>
    <%= render partial: 'player', locals: {game: @game}%>
  </div>
<%else%>
  <div class="text-center">
    <h3>
      <span class="label label-default">PLAYER <%= @game.status.upcase %></span>
    </h3>
    <br/>
    <%= link_to 'Deal Again', new_game_path, class: 'btn btn-primary' %>
    <%= link_to 'Statistics', user_stats_path(current_user), class: 'btn btn-success' %>
  </div>
<%end%>