<%= form_for game, :html => { :class => 'form-horizontal' } do |f| %>
  <% if game.errors.any? %>
    <ul class="alert-danger">
      <% game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="form-group">
    <%= f.text_field :bet_amount, :class => 'text_field form-control', placeholder: '100' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Start Game', :class => 'btn btn-primary' %>
    <%= link_to 'Statistics', stats_user_path(current_user), class: 'btn btn-warning' %>
  </div>
<% end %>